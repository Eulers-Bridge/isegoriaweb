<div class="container-fluid">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#top_navbar">
      <span class="sr-only"><%=capitalize_as_title(t(:toggle_navigation))%></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to image_tag("navigation/Home.png", alt:t(:app_name) + t(:home)), events_path, :class => " isegoria_navbar_link navbar-left" %>
    <%= link_to image_tag("navigation/Back.png", alt:t(:app_name) + t(:back)) + t(:back).capitalize , :back, :class => "isegoria_navbar_link navbar-left" %>
    <% if controller.action_methods.include?('new') %>
      <%= link_to image_tag("navigation/PlusNav.png", alt:t(:create_article)) + t(:create).capitalize, {:action => :new}, :class=>'isegoria_navbar_link navbar-left'%>
    <% end %>
  </div>
  <div class="navbar-collapse collapse" id="top_navbar">
    <%= link_to image_tag("navigation/Log Off.png", alt:t(:logout)), logout_path, method: :delete, :class => "navbar-right isegoria_navbar_link" %>
    <%= link_to image_tag("navigation/Notifications.png", alt:t(:notifications)), '#', :class => "navbar-right isegoria_navbar_link" %>
    <%= link_to image_tag("navigation/Activity.png", alt:t(:activity)), '#', :class => "navbar-right isegoria_navbar_link" %>
    <span class="isegoria_navbar_title navbar-left">
      <%=capitalize_as_title($title)%>
    </span>
  </div><!--/.navbar-collapse -->
</div>
