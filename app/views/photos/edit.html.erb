<% provide(:title, t(:title_edit_photo)) %>
<h1><%=capitalize_as_title(t(:title_edit_photo))%></h1>
<div>
<%= form_for(@photo, :url => photo_path ,:html => {:method => :put}) do |f| %>
  <div class="form-group">
    <%= f.label :title, capitalize_as_title(t (:title)) %>
    <%= f.text_field :title, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:title)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :description, capitalize_as_title(t (:description)) %>
    <%= f.text_field :description, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:description)).capitalize %>
  </div>
  <div class="form-group">
    <label for="photo_date"><%=capitalize_as_title(t(:date))%></label>
    <div class="input-group date" id="dpk_date" >
      <input type="text" readonly="true" class="form-control" placeholder="<%=t(:field_placeholder, field_name: t(:date)).capitalize%>" name="photo[date]" value="<%=@photo.date%>">
      <span class="input-group-addon">
        <i class="glyphicon glyphicon-th"></i>
      </span>
    </div>
  </div>
  <div class="form-group">
    <label for="hdd_previous_picture"><%=capitalize_as_title(t(:previous_picture))%></label>
      <%= image_tag @photo.file, class: "photo_image"%>
      <input type="hidden" id="hdd_previous_picture" name="photo[previous_picture]" value="<%=@photo.file%>">
  </div>
  <hr>
  <div class="upload-preview">
    <label><%=capitalize_as_title(t(:picture_preview))%></label>
    <!--Image closing tag required by the upload-preview-->
    <img />
  </div>
  <div class="form-group">
    <%= f.label :file, capitalize_as_title(t (:picture)) %>
    <%= f.file_field :file, accept: "image/png,image/gif,image/jpeg" ,class: 'file_input', placeholder: t(:field_placeholder, field_name: t(:picture)).capitalize %>
  </div>
  <%= f.submit capitalize_as_title(t(:edit)), class: "btn btn-large btn-success" %>
  <% end %>
</div>
<%= javascript_include_tag "photos_util" %>
<script type="text/javascript">
  $("#dpk_date").datepicker({
    format: '<%=t(:date_format_javascript)%>',
    todayBtn: 'linked',
    autoclose: true
  });
</script>