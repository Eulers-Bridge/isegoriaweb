<% provide(:title, t(:title_new_user)) %>
<h1><%=capitalize_as_title(t(:title_new_user))%></h1>
<div>
<%= form_for(@user) do |f| %>
<%= f.submit capitalize_as_title(t(:create)), class: "btn btn-large btn-success" %>
  <div class="form-group">
    <%= f.label :first_name, capitalize_as_title(t(:first_name)) %>
    <%= f.text_field :first_name, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:first_name)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, capitalize_as_title(t(:last_name)) %>
    <%= f.text_field :last_name, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:last_name)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :gender, capitalize_as_title(t(:gender)) %>
    <%= radio_button_tag("user[gender]", "Female") %>
    <%= label_tag(:gender_female, capitalize_as_title(t(:female))) %>
    <%= radio_button_tag("user[gender]", "Male") %>
    <%= label_tag(:gender_male, capitalize_as_title(t(:male))) %>
  </div>
  <div class="form-group" id="divNationality">
    <label for="slNationality"><%=capitalize_as_title(t(:nationality))%></label>
    <select class="form-control" id="slNationality">
      <option value="0"><%=t(:select_one).capitalize%></option>
      <% @countries_catalog.each do |country| %>
          <option value="<%=country.id%>"><%=country.name%></option>
      <%end%>
    </select>
  </div>
  <div class="form-group">
    <%= f.label :yob, capitalize_as_title(t(:yob)) %>
    <%= f.text_field :yob, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:yob)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :password, capitalize_as_title(t (:password)) %>
    <%= f.password_field :password, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:password)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, capitalize_as_title(t (:password_confirmation)) %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:password_confirmation)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :contact_number, capitalize_as_title(t (:contact_number)) %>
    <%= f.text_field :contact_number, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:contact_number)).capitalize %>
  </div>
  <hr>
  <div class="form-group" id="divInstitutionCountry">
    <label for="slInstitutionCountry"><%=capitalize_as_title(t(:institution_country))%></label>
    <select class="form-control" id="slInstitutionCountry">
      <option value="0"><%=t(:select_one).capitalize%></option>
      <% @countries_catalog.each do |country| %>
          <option value="<%=country.id%>"><%=country.name%></option>
        <%end%>
    </select>
  </div>
  <div class="form-group" id="divInstitutionCountry">
    <label for="slInstitution"><%=capitalize_as_title(t(:institution))%></label>
    <select class="form-control" id="slInstitution" name="user[institution_id]">
      <option value="0"><%=t(:select_one).capitalize%></option>
    </select>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label :tracking_off %>
    <%= f.check_box :tracking_off, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :opt_out_data_collection %>
    <%= f.check_box :opt_out_data_collection, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :email, capitalize_as_title(t(:email))%>
    <%= f.text_field :email, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:email)).capitalize%>
  </div>
  <% end %>
  <div hidden="true">
</div>
<script>
  var countries = <%=raw(@countries_js_string)%>;
  var select_one_text = "<%=t(:select_one).capitalize%>"; 
</script>
<%= javascript_include_tag "users_util" %>