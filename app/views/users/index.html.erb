<div id="users_list">
  <% @users_list.each do |user| %>
  <div class="user_item">
    <div class="item_controls">
      <%= link_to t(:edit).capitalize, edit_user_path(:id => user.email), :class => 'edit_link' %>
      <%= link_to t(:delete).capitalize, user_path(:id => user.email), method: :delete, :class => 'delete_link' %>
    </div>
    <div>
      <h3><%=user.email%></h3>
      <h4><%=t(:full_name).capitalize%>: <%=capitalize_as_title(user.full_name)%></h4>
      <h4><%=t(:email).capitalize%>: <%=user.email%></h4>
      <% if user.account_verified == true %>
        <%=capitalize_as_title(t(:account_verified)) %>
      <% else %>
        <%=capitalize_as_title(t(:account_unverified)) %>
      <%= button_to capitalize_as_title(t(:resend_verify_account_email)), user_resend_verification_email_path(:id => user.email, :action_type => "revoke_access"), method: :post, :class => 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  <!--hr-->
  <% end %>
</div>

<div class="section_controls">
  <%= render "partials/admin_list_pagination" %>
</div>
