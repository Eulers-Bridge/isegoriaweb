<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <%= t(:validation_form_with_errors).capitalize %> <%#pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>