<%= link_to t(:create).capitalize, new_article_path, :class => 'btn btn-success' %> 
<% @articles_list.each do |article| %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%=article.title%></h3>
    <%=article.date%>
    Created by: <%=article.creator%>
  </div>
  <div class="panel-body">
  <%= image_tag "articles/"+article.picture, class: "article_image" %>
      <p><%=article.content%></p>
  </div>
  <div class="panel-footer">
    <%= link_to t(:edit).capitalize, edit_article_path(:id => article.id), :class => 'btn btn-info' %> <%= button_to t(:delete).capitalize, article_path(:id => article.id), method: :delete, :class => 'btn btn-danger' %>
  </div>
</div>
<% end %>