<div id="photos_list">
  <% @polls_list.each do |poll| %>
    <div class="poll_item">
      <div class="item_controls">
        <%= link_to t(:edit).capitalize, edit_poll_path(:id => poll.id), :class => 'edit_link' %>
        <%= link_to t(:delete).capitalize, poll_path(:id => poll.id), method: :delete, :class => 'delete_link' %>
      </div>
      <div>
        <h3><%=poll.question%></h3>
        <h4><%= t(:start_date).capitalize+" "+poll.start_date%></h4>
        <h4><%= t(:duration).capitalize+" "+poll.duration.to_s+" "+t(:minutes)%></h4>
      </div>
    </div>
  <% end %>
</div>

<div class="section_controls">
  <%= render "partials/admin_list_pagination" %>
</div>

<%= javascript_include_tag "photos_util" %>
