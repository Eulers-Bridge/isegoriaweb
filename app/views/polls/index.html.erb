<%= link_to t(:create).capitalize, new_poll_path, :class => 'btn btn-success' %> 
<% @polls_list.each do |poll| %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%=poll.date%></h3>
  </div>
  <div class="panel-body">
      <p><%=poll.question%></p>
  </div>
  <div class="panel-footer">
    <%= link_to t(:edit).capitalize, edit_poll_path(:id => poll.id), :class => 'btn btn-info' %> <%= button_to t(:delete).capitalize, poll_path(:id => poll.id), method: :delete, :class => 'btn btn-danger' %>
  </div>
</div>
<% end %>