<% provide(:title, t(:title_new_election)) %>
<h1><%=capitalize_as_title(t(:title_new_election))%></h1>
<div>
<%= form_for(@election) do |f| %>
<%= f.submit capitalize_as_title(t(:create)), class: "btn btn-large btn-success" %>
  <div class="form-group">
    <%= f.label :title, capitalize_as_title(t (:title)) %>
    <%= f.text_field :title, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:title)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, capitalize_as_title(t (:introduction)) %>
    <%= f.text_area :introduction, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:introduction)).capitalize %>
  </div>
  <div class="form-group">
    <%= f.label :process, capitalize_as_title(t (:process)) %>
    <%= f.text_area :process, class: "form-control", placeholder: t(:field_placeholder, field_name: t(:process)).capitalize %>
  </div>
  <div class="form-group">
    <label for="election_start_date"><%=capitalize_as_title(t(:start_date))%></label>
    <div class="input-group date" id="dpk_start_date" >
      <input type="text" readonly="true" class="form-control" placeholder="<%=t(:field_placeholder, field_name: t(:start_date)).capitalize%>" name="election[start_date]">
      <span class="input-group-addon">
        <i class="glyphicon glyphicon-th"></i>
      </span>
    </div>
  </div>
  <div class="form-group">
    <label for="election_end_date"><%=capitalize_as_title(t(:end_date))%></label>
    <div class="input-group date" id="dpk_end_date" >
      <input type="text" readonly="true" class="form-control" placeholder="<%=t(:field_placeholder, field_name: t(:end_date)).capitalize%>" name="election[end_date]">
      <span class="input-group-addon">
        <i class="glyphicon glyphicon-th"></i>
      </span>
    </div>
  </div>
  <div class="form-group">
    <label for="election_start_voting_date"><%=capitalize_as_title(t(:start_voting_date))%></label>
    <div class="input-group date" id="dpk_start_voting_date" >
      <input type="text" readonly="true" class="form-control" placeholder="<%=t(:field_placeholder, field_name: t(:start_voting_date)).capitalize%>" name="election[start_voting_date]">
      <span class="input-group-addon">
        <i class="glyphicon glyphicon-th"></i>
      </span>
    </div>
  </div>
  <div class="form-group">
    <label for="election_end_voting_date"><%=capitalize_as_title(t(:end_voting_date))%></label>
    <div class="input-group date" id="dpk_end_voting_date" >
      <input type="text" readonly="true" class="form-control" placeholder="<%=t(:field_placeholder, field_name: t(:end_voting_date)).capitalize%>" name="election[end_voting_date]">
      <span class="input-group-addon">
        <i class="glyphicon glyphicon-th"></i>
      </span>
    </div>
  </div>
  <% end %>
</div>
<%= javascript_include_tag "elections_util" %>
<script type="text/javascript">
  $("#dpk_start_date").datepicker({
    format: '<%=t(:date_format_javascript)%>',
    todayBtn: 'linked',
    autoclose: true
  });
  $("#dpk_end_date").datepicker({
    format: '<%=t(:date_format_javascript)%>',
    todayBtn: 'linked',
    autoclose: true
  });
  $("#dpk_start_voting_date").datepicker({
    format: '<%=t(:date_format_javascript)%>',
    todayBtn: 'linked',
    autoclose: true
  });
  $("#dpk_end_voting_date").datepicker({
    format: '<%=t(:date_format_javascript)%>',
    todayBtn: 'linked',
    autoclose: true
  });
</script>