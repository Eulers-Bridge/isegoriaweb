	<div id="section_3" class="landing-section">
	  <div id="section_3_top">
	    <h1><%=t(:landing_text_3_features_title)%></h1>
	    <h4><%=t(:landing_text_3_features_message)%></h4>
	    <div id="section_3_top_features">
	      <div class="row">
    	    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    		  <%= image_tag "landing/Event_48.png"%>
    		</div>
    		<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
    		  <h5><%=t(:landing_text_3_feature_1)%></h5>
    		</div>
          </div>
          <div class="row">
    	    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    		  <%= image_tag "landing/News_48.png"%>
    		</div>
    		<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
    		  <h5><%=t(:landing_text_3_feature_2)%></h5>
    		</div>
          </div>
	    </div>
	  </div>
	  <hr>
	  <div id="section_3_bottom">
	    <div class="row">
	      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 features-col">
    	    <%= image_tag "landing/Build_Trust.png"%>
    	    <h3><%=t(:landing_text_3_trust_title)%></h3>
    	    <h5><%=t(:landing_text_3_trust_message)%></h5>
    	  </div>
    	  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 features-col">
    	    <%= image_tag "landing/Connections.png"%>
    	    <h3><%=t(:landing_text_3_wealth_title)%></h3>
    	    <h5><%=t(:landing_text_3_wealth_message)%></h5>
    	  </div>
    	  <div id="section_3_rewards" class="col-xs-4 col-sm-4 col-md-4 col-lg-4 features-col">
    	    <%= image_tag "landing/Rewards.png"%>
    	    <h3><%=t(:landing_text_3_rewards_title)%></h3>
    	    <h5><%=t(:landing_text_3_rewards_message)%></h5>
    	    <h4 class="coming_soon"><%=t(:landing_text_3_comming_soon)%></h4>
    	  </div>
        </div>
	  </div>
	</div>
  </div>
  <div id= "landing_container_section_4" class="landing_container">
	<div id="section_4" class="landing-section">
	  <%= image_tag "landing/Design.png"%>
	  <h1><%=t(:landing_text_4_title)%></h1>
	  <h4><%=t(:landing_text_4_message)%></h4>
