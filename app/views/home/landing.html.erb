	</div>
  </div>
  <div class="landing_container">
    <!--div class="landing-section">
      <%= image_tag "landing/iPhone_1.png", id:"section_3_phone_picture"%>
     </div>
    <div class="landing-section">
	  <%= image_tag "landing/iPhone_2.png", id:"section_5_phone_picture"%>
	</div-->
  </div>
  <div id="login_form">
    <%= form_for(:session, url: sessions_path, :html =>{class: "navbar-form navbar-right"}) do |f| %>
      <div class="form-group">
        <%= f.label :username, t(:username).capitalize, class: "sr-only" %>
        <%= f.text_field :username, class: "form-control", placeholder: t(:username).capitalize %>
      </div>
      <div class="form-group">
        <%= f.label :password, t(:password).capitalize, class: "sr-only" %>
        <%= f.password_field :password, class: "form-control", placeholder: t(:password).capitalize %>
      </div>
      <%= f.submit capitalize_as_title(t(:login)), class: "btn btn-success navbar-button login_form_button" %>
      <input class="btn btn-danger navbar-button login_form_button" id="cancel_login" type="button" value="<%=capitalize_as_title(t(:cancel))%>" />
    <% end %>
  </div>
  <%= render "partials/flash_messages" %>
</body>
  

<script>

$(document).ready(function(){
	$(this).scroll(function(){
		var ua= navigator.userAgent;
    //Effect tested and only working in Firefox so far
		if(ua.toLowerCase().indexOf('firefox') > -1)
		{
			var pos =  $(this).scrollTop();
			if( pos <= 700 ) 
			{
        		$('#landing_container_menu_bar').css({position:'absolute', top: '700px'});  
    		}
    		else 
    		{
        		$('#landing_container_menu_bar').css({position:'fixed', top: '0px'});
    		}
		}
	});
  $('#admin_login').click(function(e){
    $('#login_form').toggleClass('show');
    e.preventDefault();
    });
  $('#cancel_login').click(function(e){
    $('#login_form').removeClass('show');
    e.preventDefault();
    });
  });

</script>
</html>