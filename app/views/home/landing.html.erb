	</div>
  </div>
  <div id= "landing_container_section_6" class="landing_container">
	<div id="section_6" class="landing-section">
	<p><h1><%=t(:landing_text_6_title)%></h1></p>
	<p><h4><%=t(:landing_text_6_message)%></h4></p>
	</div>
  </div>
  <div id= "landing_container_footer" class="landing_container">
	<div id="landing_footer" class="landing-section">
      <%= image_tag "landing/Logo_Stylized_20.png"%>
	  <div id="landing_footer_links_bar">
	    <button class="btn"><%=capitalize_as_title(t(:terms_of_service))%></button>
	    <button class="btn"><%=capitalize_as_title(t(:media_enquires))%></button>
        <button class="btn"><%=capitalize_as_title(t(:contact_us))%></button>
        <button class="btn"><%=capitalize_as_title(t(:pricing))%></button>	    
	    <button class="btn"><%=capitalize_as_title(t(:privacy_policy))%></button>
	    <button class="btn"><%=capitalize_as_title(t(:security))%></button>
		<button class="btn"><%=capitalize_as_title(t(:about_us))%></button>
	  </div>
	  <hr>
	  <h5 class="copyright"><%=t(:copyright_text)%></h5>
	  <h5 class="copyright_message"><%=t(:copyright_message)%></h5>
	</div>
  </div>
  <div id= "landing_container_menu_bar" class="landing_container">
	<div id="landing_menu_bar" class="landing-section">
	  <button class="btn"><%=capitalize_as_title(t(:about_isegoria))%></button>
	  <button class="btn"><%=capitalize_as_title(t(:isegoria_features))%></button>
	  <button class="btn"><%=capitalize_as_title(t(:design))%></button>
	  <button class="btn"><%=capitalize_as_title(t(:intelligence))%></button>
	  <button class="btn"><%=capitalize_as_title(t(:testimonials))%></button>
	</div>
  </div>
  <div class="landing_container">
    <div class="landing-section">
      <%= image_tag "landing/iPhone_1.png", id:"section_3_phone_picture"%>
     </div>
    <div class="landing-section">
	  <%= image_tag "landing/iPhone_2.png", id:"section_5_phone_picture"%>
	</div>
  </div>
  <div id="login_form">
    <%= form_for(:session, url: sessions_path, :html =>{class: "navbar-form navbar-right"}) do |f| %>
      <div class="form-group">
        <%= f.label :username, t(:username).capitalize, class: "sr-only" %>
        <%= f.text_field :username, class: "form-control", placeholder: t(:username).capitalize %>
      </div>
      <div class="form-group">
        <%= f.label :password, t(:password).capitalize, class: "sr-only" %>
        <%= f.password_field :password, class: "form-control", placeholder: t(:password).capitalize %>
      </div>
      <%= f.submit capitalize_as_title(t(:login)), class: "btn btn-success navbar-button login_form_button" %>
      <input class="btn btn-danger navbar-button login_form_button" id="cancel_login" type="button" value="<%=capitalize_as_title(t(:cancel))%>" />
    <% end %>
  </div>
</body>
  

<script>

$(document).ready(function(){
	$(this).scroll(function(){
		var ua= navigator.userAgent;
		//Effect tested and only working in Firefox so far
		if(ua.indexOf('Mozilla') != -1)
		{
			var pos =  $(this).scrollTop();
			if( pos <= 800 ) 
			{
        		$('#landing_container_menu_bar').css({position:'absolute', top: '800px'});  
    		}
    		else 
    		{
        		$('#landing_container_menu_bar').css({position:'fixed', top: '0px'});
    		}
		}
	});
  $('#admin_login').click(function(e){
    $('#login_form').toggleClass('show');
    e.preventDefault();
    });
  $('#cancel_login').click(function(e){
    $('#login_form').removeClass('show');
    e.preventDefault();
    });
  });

</script>
</html>