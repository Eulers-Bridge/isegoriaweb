           <source src="Shadows.mp4" type="video/mp4">
           <%=t(:video_unsupported).capitalize%>
         </video>
         <div id="section_1_apps_bar">
           <div class="row">
		     <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			   <%= image_tag "landing/iOS.png"%>
			 </div>
		     <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 version-col">
			   <p class="mob-app-name"><%=t(:landing_download)%> iOS</p>
			   <p class="mob-app-version"><%=t(:landing_ios_version)%></p>
			 </div>
             <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
			   <%= image_tag "landing/Android.png"%>
			 </div>
			 <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 version-col">
			   <p class="mob-app-name"><%=t(:landing_download)%> Android</p>
