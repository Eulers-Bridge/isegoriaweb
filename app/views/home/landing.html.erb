  <ol class="carousel-indicators">
    <li data-target="#picture_carousel" data-slide-to="0" class="active carousel-indicator"></li>
    <li data-target="#picture_carousel" data-slide-to="1" class="carousel-indicator"></li>
    <li data-target="#picture_carousel" data-slide-to="2" class="carousel-indicator"></li>
  </ol>
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "landing/iphone5c_blue_portrait.png", class: "carousel-image" %>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <%= image_tag "landing/iphone5c_blue_portrait.png", class: "carousel-image" %>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <%= image_tag "landing/iphone5c_blue_portrait.png", class: "carousel-image" %>
      <div class="carousel-caption">
      </div>
    </div>
  </div>

  <!-- Controls -->
