<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

	<!-- Include js plugin -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
  <title>Isegoria Web</title>
</head>
<body >
  <div id= "more_info_container_section_1" class="landing_container">
    <div id="section_1" class="landing-section">
      <div id="section_1_header">
        <div id="header_app_name">
          <%= image_tag "landing/Blue_Logo.png",  class:"isegoria_logo"%>
          <%=t(:isegoria).capitalize%>
          <%= image_tag "landing/Beta_Blue.png",  class:"isegoria_logo"%>
        </div>
		    <button class="btn landing-link-border" id="admin_login"><%=capitalize_as_title(t(:admin_login))%></button>
      </div>
      <hr>
      <div id="section_1_content">
        <h1><%=t(:details_modal_1)%></span></h1>
      </div>
      
      <div id="details_section_2" class="details-section">
	    <div id="details_section_2_top">
        <h1 id="details_section_2_title"><%=capitalize_as_title(t(:pricing))%></h1>
	      <h3><%=t(:pricing_message)%></h3>
      </div>  
	  </div>
	  
	  <div id="details_section_3" class="details-section">
	    <div id="details_section_3_top">
        <h1 id="details_section_3_title"><%=capitalize_as_title(t(:privacy_policy))%></h1>
	      <h3><%=t(:privacy_policy_message)%></h3>
      </div>  
      <hr>
      <div class="more_info_section_link">
          <button class="btn"><span> <%= image_tag "home/Tick.png",  id:"details_section_3_icon"%></span><%=t(:read_terms_and_conditions).upcase%></button>
      </div>
      <hr>
	  </div>
	  
	  <div id="details_section_4" class="details-section">
	    <div id="details_section_4_top">
        <h1 id="details_section_4_title"><%=capitalize_as_title(t(:contact_us))%></h1>
	      <h3><%=t(:contact_us_message)%></h3>
      </div>  
	  </div>
  </div>
    </div>
    
    
  
  
  <%= render "partials/landing_footer" %>
  <div id="login_form">
    <%= form_for(:session, url: sessions_path, :html =>{class: "navbar-form navbar-right"}) do |f| %>
      <div class="form-group">
        <%= f.label :username, t(:username).capitalize, class: "sr-only" %>
        <%= f.text_field :username, class: "form-control", placeholder: t(:username).capitalize %>
      </div>
      <div class="form-group">
        <%= f.label :password, t(:password).capitalize, class: "sr-only" %>
        <%= f.password_field :password, class: "form-control", placeholder: t(:password).capitalize %>
      </div>
      <%= f.submit capitalize_as_title(t(:login)), class: "btn btn-success navbar-button login_form_button" %>
      <input class="btn btn-danger navbar-button login_form_button" id="cancel_login" type="button" value="<%=capitalize_as_title(t(:cancel))%>" />
    <% end %>
  </div>
  <%= render "partials/flash_messages" %>
</body>
<script>

$(document).ready(function(){
  $('#admin_login').click(function(e){
    $('#login_form').toggleClass('show');
    e.preventDefault();
    });
  $('#cancel_login').click(function(e){
    $('#login_form').removeClass('show');
    e.preventDefault();
    });
  });

</script>  
</html>